<h1>RORLab</h1>
<hr />
<div ng-controller="PostsCtrl" id="page-posts">
  <h2>Posts</h2>
  <form ng-submit="submitForm()">
    <div class="form-group">
      <label for="post_title">Title</label>
      <input ng-model="formData.title" type="text" id="post_title" class="form-control" />
    </div>
    <div class="form-group">
      <label for="post_content">Content</label>
      <textarea ng-model="formData.content" id="post_content" class="form-control"></textarea>
    </div>
    <div>
      <button class="btn btn-primary">Post</button>
    </div>
  </form>
  <hr />
  <div ng-repeat="post in posts">
    <h3>{{post.title}}</h3>
    <p>&middot; Date: {{post.created_at | date:'yyyy-MM-dd HH:mm-ss'}}</p>
    <p style="white-space:pre">{{post.content}}</p>
    <hr />
  </div>
</div>
